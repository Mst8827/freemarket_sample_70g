.header
  .header__box
    .header__box__main
      = link_to "#" do
        = image_tag "/material/logo/logo.png", size: "140x40"
      = form_with url: "#", class: "search__box" do |f|
        = f.text_field :content, class: 'search__box__form', placeholder: ' キーワードから探す'
      = link_to "#" do
        = image_tag "/material/icon/icon-search 1.png", size: "24x24", class: "search__box__btn"
    .header__box__sub
      %ul.lists__left
        %li
          = link_to "#",class: "category" do
            カテゴリー
        %li
          = link_to "#",class: "brand" do
            ブランド
      - if user_signed_in?
        %ul.lists__right
          %li
            = link_to "ログアウト",destroy_user_session_path,method: :delete, class: 'login'
      - else
        %ul.lists__right
          %li
            = link_to "ログイン",new_user_session_path, class: 'login'
          %li
            = link_to "新規登録",new_user_registration_path, class: 'signin'
.categories
  %ul.categories__lists
    %li.list
      = link_to root_path do
        フリマ >
    %li.list
      カテゴリー一覧 >
    %li.list
      - if 
      = @category.parent.parent.name
      >
    %li.list
      = link_to category_path(@category.parent.id) do
        = @category.parent.name
        >
    %li.list
      - if @category ==category.parent.id || @category ==category.parent.parent.id
        = @category.name


.category__main
  .product
    .product__lists
      %h2 
        = @category.name
        の商品一覧（１ページ目）
      .product__lists__list
        - @categories.each do |category|
          - category.images.first(1).each do |image|
            - if category.item_purchaser_id.blank?
              = link_to item_path(category.id) do
                .image
                  = image_tag "#{image.image}", alt: "テスト", size: "200x150"
                
                .item__text
                  .item__text__name
                    = category.item_name
                  .item__text__details
                    %ul
                      %li
                        = category.price
                        円
                      %li
                        ★2
                    %p
                      (税込)


  = paginate(@categories)


.appbanner
  .appbanner__inner
    %h1.inner__title
      だれでもかんたん、人生を変えるフリマアプリ
    %p.inner__text
      今すぐ無料ダウンロード！
    .inner__btn
